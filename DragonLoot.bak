function OnLootedItem(numID, lootedBy, itemName, itemSound, lootType, self)

	lootedBy = lootedBy:gsub("%^Mx","")
	itemName = itemName:gsub("%^%a+","")
	message = "You Received Item " .. itemName 
	d(message)

	
end



function DragonLootLoad()

	DragonLoot:RegisterForEvent(EVENT_LOOT_RECEIVED, OnLootedItem)

	d("Dragon Loot Initialized")

end



